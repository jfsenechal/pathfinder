{% extends '@AfmLibrePathfinder/base.html.twig' %}

{% block title %}Armures{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <h3>Les {{ items|length }} {% if category %}{{ category.name }}{% else %}objets{% endif %}</h3>
        </div>
        <div class="card-body">

            <ul class="list-group list-group-horizontal m-3">
                {% for category in categories %}
                    <li class="list-group-item">
                        <a href="{{ path('pathfinder_item_index', {'id':category.id}) }}">{{ category.name }}</a>
                    </li>
                {% endfor %}

            </ul>
            <table class="table table-bordered">
                <tr>
                    <th>Nom</th>
                    <th>Coût</th>
                    <th>Poids</th>
                    <th>Description</th>
                    <th>Catégorie</th>
                </tr>
                {% for item in items %}
                    <tr>
                        <td>
                            <a href="{{ path('pathfinder_item_show', {'id': item.id}) }}">
                                {{ item.name }}
                            </a>
                        </td>
                        <td>
                            {{ item.cost }}
                        </td>
                        <td>
                            {{ item.weight }}
                        </td>
                        <td>
                            {{ item.description }}
                        </td>
                        <td>{{ item.category }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}
