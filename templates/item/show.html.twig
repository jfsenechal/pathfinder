{% extends '@AfmLibrePathfinder/base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3>{{ item }}</h3>
        </div>
        <div class="card-body">

            <a href="{{ path('pathfinder_item_outfit', { 'id': item.id }) }}" role="button"
               class="btn btn-primary mb-3"><i
                        class="ti ti-shield-plus"></i> Equiper</a>

            <table class="table table-bordered">
                <tr>
                    <th>Type</th>
                    <td>
                        {{ item.category }}
                    </td>
                </tr>
                <tr>
                    <th>Poids</th>
                    <td>
                        {{ item.weight }}
                    </td>
                </tr>
                <tr>
                    <th>Coût</th>
                    <td>
                        {{ item.cost }}
                    </td>
                </tr>
                <tr>
                    <th>Catégorie</th>
                    <td>
                        {{ item.category }}
                    </td>
                </tr>
            </table>

        </div>
        <div class="card-footer">
            Source: {{ item.sourced }} /
            Référence: <a href="{{ item.reference }}" target="_blank">{{ item.reference }}</a>
        </div>
    </div>
{% endblock %}
