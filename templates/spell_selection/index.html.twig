{% extends '@AfmLibrePathfinder/base.html.twig' %}

{% block title %}Pathfinder{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <h3>Sélection des sorts de {{ character }}</h3>
        </div>
        <div class="card-body">
            {% include '@AfmLibrePathfinder/spell/_form_search.html.twig' %}

            {% if spells | length > 0 %}
                {{ form_start(form_selection, { 'attr': {'class': 'form-inline'}}) }}
                {{ form_errors(form_selection) }}

                <button class="btn btn-primary mr-1 mt-3 mb-3" type="submit"><i class="fas fa-check"></i> Valider ma sélection
                </button>

                <table class="table table-bordered table-striped mt-3">
                    <tr>
                        <th> </th>
                        <th>Nom</th>
                    </tr>
                    {% for spell in spells %}
                        <tr>
                            <td>
                                <input type="checkbox" name="spells[]" value="{{ spell.id }}">
                            </td>
                            <td>
                                {{ spell.name }}
                            </td>
                        </tr>
                    {% endfor %}
                </table>

                <button class="btn btn-primary mr-1" type="submit"><i class="fas fa-check"></i> Valider ma sélection
                </button>
                {{ form_end(form_selection) }}
            {% endif %}
        </div>
    </div>

{% endblock %}
