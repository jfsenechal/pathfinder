<table class="table table-bordered">
    <tr>
        <th></th>
        <th>Total bonus</th>
        <th>Base</th>
        <th>Modificateur de base</th>
        <th>Specials</th>
    </tr>
    {% for ability in abilities %}
        <tr>
            <th>{{ ability.name }}</th>
            <td>{{ ability.total|number_sign }}</td>
            <td>{{ ability.base }}</td>
            <td>{{ ability.baseValueModifier|number_sign }}</td>
            <td>
                {% for special in ability.baseModifiers %}
                    <span title="{{ special.name }}">{{ special.value|number_sign }}</span>
                {% endfor %}
            </td>
        </tr>
    {% endfor %}
</table>