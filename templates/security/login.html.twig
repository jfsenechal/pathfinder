{% extends '@AfmLibrePathfinder/base.html.twig' %}

{% block title %}Me connecter{% endblock %}

{% block body %}

    <div class="text-center">

        <main class="form-signin">
            <form method="post" action="{{ path('app_login') }}">
                <img class="mb-4" src="{{ asset('bundles/afmlibrepathfinder/images/logo_Pathfinder.png') }}" alt="Adl"
                     width="200">
                <h1 class="h3 mb-3 fw-normal">Authentifiez vous</h1>

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="form-floating">
                    <input type="email" value="{{ last_username }}" name="email" class="form-control"
                           id="floatingInput" placeholder="jf@libre.be">
                    <label for="floatingInput">Email</label>
                </div>
                <div class="form-floating mt-3">
                    <input type="password" name="password" class="form-control" id="floatingPassword"
                           placeholder="Mot de passe">
                    <label for="floatingPassword">Mot de passe</label>
                </div>
                <button class="w-100 btn btn-lg btn-primary" type="submit">Me connecter</button>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </form>
        </main>
    </div>
{% endblock %}
