<h4 class="text-success my-3">Armure</h4>
{% if armor %}
    <table class="table table-bordered">
        <tr>
            <th>Nom</th>
            <th>Bonus ca</th>
            <th>Dextérité max</th>
            <th>
                Malus
            </th>
        </tr>
        <tr>
            <td>
                <a href="{{ path('pathfinder_armor_show', {'id': armor.id}) }}">{{ armor.name }}</a>
            </td>
            <td>{{ armor.bonus|number_sign }}</td>
            <td>{{ armor.bonus_dexterity_max|number_sign }}</td>
            <td>{{ armor.penalty|number_sign }}</td>
        </tr>
    </table>
    {% else %}
    <p class="text-muted">Aucune</p>
{% endif %}