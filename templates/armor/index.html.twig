{% extends '@AfmLibrePathfinder/base.html.twig' %}

{% block title %}Armures{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <h3>Les {{ armors|length }} armures</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th>Nom</th>
                    <th>Bonus</th>
                    <th>Vitesse 6M / 9M</th>
                    <th>Dextérité maximum</th>
                </tr>
                {% for armor in armors %}
                    <tr>
                        <td>
                            <a href="{{ path('pathfinder_armor_show', {'id': armor.id}) }}">
                                {{ armor.name }}
                            </a>
                        </td>
                        <td>
                            {{ armor.bonus }}
                        </td>
                        <td>
                            {{ armor.speed6 }} / {{ armor.speed9 }}
                        </td>
                        <td>
                            {{ armor.bonus_dexterity_max }}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}
