{% extends '@AfmLibrePathfinder/base.html.twig' %}

{% block title %}Personnage{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3>{{ character }}</h3>
        </div>
        <div class="card-body">
            {% include '@AfmLibrePathfinder/character/_actions.html.twig' %}
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th>Race</th>
                    <td>{{ character.race }}</td>
                </tr>
                <tr>
                    <th>Classe</th>
                    <td>{{ character.characterClass }}</td>
                </tr>
                </tbody>
            </table>

            <h4>Sorts</h4>
            {% for spellD in character.characterClass.spellClasses %}
                {{ spellD.spell.name }}
            {% endfor %}

            {{ include('@AfmLibrePathfinder/character/_form_delete.html.twig') }}
        </div>
    </div>
{% endblock %}
