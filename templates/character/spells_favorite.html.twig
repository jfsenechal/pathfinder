<h4 class="text-success">Sorts sélectionnés</h4>
<ul class="list-group">
    {% for level, data in characterSpells %}
        <li class="list-group-item"><strong>Lvl {{ level }}</strong>
            <ul class="list-group">
                {% for characterSpell in data %}
                    {% set spell = characterSpell.spell %}
                    <li class="list-group-item">
                       <a href="{{ path('pathfinder_spell_show', {'id':  spell.id }) }}">{{ spell.name }}</a>
                        <button title="Déselectionné {{ spell.name }}"
                                type="button"
                                class="btn btn-danger btn-sm float-end"
                                data-bs-toggle="modal"
                                data-bs-target="#deselectionModal"
                                data-bs-whatever="{{ characterSpell.id }}"
                                data-bs-spellname="{{ spell.name }}">
                            <i class="far fa-trash-alt"></i>
                        </button>
                    </li>
                {% endfor %}
            </ul>
        </li>
    {% endfor %}
</ul>
