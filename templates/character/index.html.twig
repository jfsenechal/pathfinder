{% extends '@AfmLibrePathfinder/base.html.twig' %}

{% block title %}Personnages{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3>Vos personnages</h3>
        </div>
        <div class="card-body">
            <a href="{{ path('pathfinder_character_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Ajouter un personnage
            </a> <br/><br/>

            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Race</th>
                    <th>Classe</th>
                </tr>
                </thead>
                <tbody>
                {% for character in characters %}
                    <tr>
                        <td>
                            <a href="{{ path('pathfinder_character_show', {'id': character.id}) }}">
                                {{ character.name }}
                            </a>
                        </td>
                        <td>{{ character.race ? character.race.name }}</td>
                        <td>{{ character.characterClass ? character.characterClass.name }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}
