{{ form_start(form) }}
{{ form_errors(form) }}
<div class="row">
    <div class="col-6">
        {{ form_row(form.nom) }}
    </div>
    <div class="col-6">
        {{ form_row(form.prenom) }}
    </div>
    <div class="col-6">
        {{ form_row(form.email) }}
    </div>
    {% if form.plainPassword is defined %}
        <div class="col-6">
            {{ form_row(form.plainPassword) }}
        </div>
    {% endif %}
    <div class="col-6">
        {{ form_row(form.roles) }}
    </div>
</div>
<button class="btn btn-primary mr-1 mb-2" type="submit"><i class="far fa-save" aria-hidden="true"></i>
    Sauvegarder
</button>
{{ form_end(form) }}
