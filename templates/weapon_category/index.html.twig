{% extends '@AfmLibrePathfinder/base.html.twig' %}

{% block title %}Armes{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <h3>Les cat√©gories d' armes</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th>Nom</th>
                    <th>Nombre d'armes</th>
                </tr>
                {% for category in categories %}
                    <tr>
                        <td>
                            <a href="{{ path('pathfinder_weapon_category_show', {'id': category.id}) }}">
                                {{ category.name }}
                            </a>
                        </td>
                        <td>
                            {{ category.weapons|length }}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}
