{% block title %}Passage de niveau{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <h3>Chaussette ! {{ character.name }}</h3>
        </div>
        <div class="card-body">

            <h5>
                <strong>Votre niveau actuel : {{ character.current_level.lvl }}</strong>
            </h5>

            <h5 class="text-success mt-3">DÃ©tails du prochain niveau :</h5>

            {% include '@AfmLibrePathfinder/level/_list.html.twig' with {'levels': [nextLevel]} %}

            {{ form_start(form) }}
            {{ form_errors(form) }}
