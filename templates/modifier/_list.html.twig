{% if modifiers|length > 0 %}
    <h4 class="text-success mt-3">Modificateur(s)</h4>
    <table class="table table-bordered">
        <tr>
            <th>Nom</th>
            <th>Caract√©ristique</th>
            <th>Value</th>
        </tr>
        {% for modifier in modifiers %}
            <tr>
                <td>
                    {{ modifier.name }}
                </td>
                <td>
                    {{ modifier.ability.value|trans }}
                </td>
                <td>{{ modifier.value|number_sign }}</td>
            </tr>
        {% endfor %}
    </table>
{% endif %}