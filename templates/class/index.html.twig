{% extends '@AfmLibrePathfinder/base.html.twig' %}

{% block title %}Pathfinder{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <h3>Classes {{ characterClasses|length }}</h3>
        </div>
        <div class="card-body">
            {% include '@AfmLibrePathfinder/class/_form_search.html.twig' %}

            <table class="table table-bordered mt-3" {{ stimulus_controller('hello',{'url':url('pathfinder_api_set_pathfinder'),'type':'class'}) }}>
                <tr>
                    <th>Nom</th>
                    <th>Campagnes</th>
                    <th>Set</th>
                </tr>
                {% for characterClass in characterClasses %}
                    <tr>
                        <td>
                            <a href="{{ path('pathfinder_class_show', {'id': characterClass.id}) }}">
                                {{ characterClass.name }}
                            </a>
                        </td>
                        <td id="result-{{ characterClass.id }}">
                            {% if characterClass.campaings %}
                                {{ characterClass.campaings|join('') }}
                            {% endif %}
                        </td>
                        <td>
                            <button class="btn btn-primary btn-sm"
                                    data-action="click->hello#greet"
                                    data-id="{{ characterClass.id }}">
                                Greet
                            </button>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}
