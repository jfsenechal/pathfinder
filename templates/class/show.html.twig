{% extends '@AfmLibrePathfinder/base.html.twig' %}

{% block title %}Classe{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3>{{ classT }}</h3>
        </div>
        <div class="card-body">

            <p class="text-muted">{{ classT.description }}</p>

            <table class="table table-bordered">
                <tr>
                    <th>Dé de vie</th>
                    <td>{{ classT.dieOfLive }}</td>
                </tr>
                <tr>
                    <th>Alignement</th>
                    <td>{{ classT.alignment }}</td>
                </tr>
                <tr>
                    <th>Rank par niveau</th>
                    <td>{{ classT.ranksPerLevel }}</td>
                </tr>
            </table>

            <h4 class="text-success">Evolution</h4>
            {% include '@AfmLibrePathfinder/level/_list.html.twig' %}

            <h4 class="text-success">Sorts</h4>
            {{ include('@AfmLibrePathfinder/class/_spells.html.twig') }}

            <br/>

        </div>
        <div class="card-footer">
            Source: {{ classT.sourced }} /
            Référence: <a href="{{ classT.reference }}">{{ classT.reference }}</a>
        </div>
    </div>
{% endblock %}
