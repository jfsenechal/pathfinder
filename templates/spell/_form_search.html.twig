{{ form_start(form, { 'attr': {'class': 'form-inline'}}) }}
{{ form_errors(form) }}
<div class="row">
    <div class="col">
        {{ form_row(form.name, {label_attr: {class: 'sr-only'}, attr:{'class': ' my-1 mr-sm-2'} }) }}
    </div>
    <div class="col">
        {{ form_row(form.class, {label_attr: {class: 'sr-only'}, attr:{'class': ' my-1 mr-sm-2'} }) }}
    </div>
    <div class="col">
        {{ form_row(form.level, {label_attr: {class: 'sr-only'}, attr:{'class': ' my-1 mr-sm-2'} }) }}
    </div>
</div>

<button class="btn btn-primary mr-1" type="submit">
    <i class="fas fa-search" aria-hidden="true"></i>
     Rechercher
</button>

{{ form_rest(form) }}
{{ form_end(form) }}
