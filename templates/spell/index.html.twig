{% extends '@AfmLibrePathfinder/base.html.twig' %}

{% block title %}Pathfinder{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <h3>Sorts <span class="badge bg-secondary">{{ spells|length }}</span></h3>
        </div>
        <div class="card-body">
            {% include '@AfmLibrePathfinder/spell/_form_search.html.twig' %}

            <table class="table table-bordered mt-3"{{ stimulus_controller('hello',{'url':url('pathfinder_api_set_pathfinder'),'type':'spell'}) }}>
                <tr>
                    <th>Nom</th>
                    <th>Campagnes</th>
                    <th>Set</th>
                </tr>
                {% for spell in spells %}
                    <tr>
                        <td>
                            <a href="{{ path('pathfinder_spell_show', {'id': spell.id}) }}">
                                {{ spell.name }}
                            </a>
                        </td>
                        <td id="result-{{ spell.id }}">
                            {% if spell.campaings %}
                                {{ spell.campaings|join('') }}
                            {% endif %}
                        </td>
                        <td>
                            <button class="btn btn-primary btn-sm"
                                    data-action="click->hello#greet"
                                    data-id="{{ spell.id }}">
                                Greet
                            </button>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}
