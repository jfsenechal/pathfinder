{% extends '@AfmLibrePathfinder/base.html.twig' %}

{% block title %}Compétence{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3>{{ skill.name }}</h3>
        </div>
        <div class="card-body">
            <h5 class="text-success mt-3">
                Caractéristique liée
            </h5>
            {{ skill.ability }}
            <h5 class="text-success mt-3">
                Formation nécessaire
            </h5>
            {{ skill.training ? 'Oui' : 'Non' }}

            <div class="text-muted">
                {{ skill.descriptionHtml|raw }}
            </div>

            {% include '@AfmLibrePathfinder/skill/_classes.html.twig' %}
        </div>
        <div class="card-footer">
            Source: {{ skill.sourced }} /
            Référence: <a href="{{ skill.reference }}" target="_blank">{{ skill.reference }}</a>
        </div>
    </div>
{% endblock %}
