{% extends '@AfmLibrePathfinder/base.html.twig' %}

{% block title %}Spell{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3>{{ classFeature }}</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th>Classe</th>
                    <td>
                        <a href="{{ path('pathfinder_class_show', {'id': classFeature.classT.id}) }}">
                            {{ classFeature.classT }}
                        </a>
                    </td>
                </tr>
                <tr>
                    <th>Auto</th>
                    <td>{{ classFeature.auto ? 'Oui' : 'Non' }}</td>
                </tr>
            </table>
            {{ classFeature.description | nl2br }}
        </div>
        <div class="card-footer">
            Source: {{ classFeature.sourced }} /
            Référence: <a href="{{ classFeature.reference }}">{{ classFeature.reference }}</a>
        </div>
    </div>
{% endblock %}
